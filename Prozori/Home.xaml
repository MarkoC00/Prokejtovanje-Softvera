                               TextAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                    <Button Grid.Row="1"
                            Margin="0 30 0 0"
                            Click="Btn_Vest1"
                            FontSize="20"
                            Content="Vise informacija"
                            Foreground="WhiteSmoke"
                            Background="Transparent"
                            BorderThickness="0"/>
                </Grid>

            </Grid>
            <Grid Grid.Row="1"
                  Width="500"
                  Margin="30 30 30 70">
                <Grid.Background>
                    <ImageBrush ImageSource="D:\SIMS\NISsoftver\Materijali\Solarni-paneli-benzinska-pumpa-Foto-NIS.jpg"/>
                </Grid.Background>
                <Grid VerticalAlignment="Bottom"
                        Height="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="#194998" Opacity="0.3"/>
                    </Grid.Background>
                    <TextBlock Text="Još sedam benzinskih stanica dobilo solarne panele"
                               FontSize="25"
                               Margin="0 30 0 0"
                               Width="350"
                               TextAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
